<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDelivery.Pages.Users.Login">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Inscrever" Clicked="OnSignUpButtonClicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand">
            <Label Text="Login" XAlign="Center" FontAttributes="Bold" 
                   FontSize="30"         VerticalTextAlignment="Center"/>
            <Label Text="E-mail" />
            <Entry x:Name="emailLogin" Placeholder="E-mail" />
            <Label Text="Senha" />
            <Entry x:Name="senhaLogin" Placeholder="Senha" IsPassword="true" />

            <Button Text="Acessar" Clicked="OnLoginButtonClicked" />
            <Button x:Name="btLogarFacebook" Text="Inscrever-se Com Facebook"  BackgroundColor="#4282b9" Image="ic_facebook.png" />
            <Button Text="Inscrever-se Com Google" x:Name="btLogarGoogle" BackgroundColor="#f78a7e" Image="ic_google.png"   />
            <!--<Label x:Name="txtCadastrarLogin" Text="Cadastrar" XAlign="Center" FontAttributes="Bold" 
                   FontSize="Large"         VerticalTextAlignment="Center"/>-->
            <Label x:Name="messageLabel" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>