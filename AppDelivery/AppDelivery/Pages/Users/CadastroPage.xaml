<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDelivery.Pages.Users.CadastroPage">
    
    <ContentPage.Content>
        <ScrollView Orientation="Vertical">
            
        <StackLayout VerticalOptions="StartAndExpand">
            <Label Text="Nome:" />
            <Entry x:Name="usernameEntry" Placeholder="username" />
            <Label Text="Email" />
            <Entry x:Name="emailEntry" Placeholder="E-mail"/>
            <Label Text="Senha:" />
            <Entry x:Name="passwordEntry" IsPassword="true" />
            <Label Text="Telefone:" />
            <Entry x:Name="telCadastrar" Placeholder="Telefone"/>
            <Button Text="Inscrever" Clicked="OnSignUpButtonClicked" />
            <Button x:Name="btCadastrarFacebook" Clicked="btCadastrarFacebook_Clicked" Text="Inscrever-se Com Facebook"  BackgroundColor="#4282b9" Image="ic_facebook.png" />
                <Button x:Name="btCadastrarGoogle" Text="Inscrever-se Com Google"  BackgroundColor="#f78a7e" Image="ic_google.png"   />
            <Label x:Name="messageLabel" />
        </StackLayout>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>